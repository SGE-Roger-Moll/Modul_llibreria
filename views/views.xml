<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="llibreria.list">
      <field name="name">llibreria list</field>
      <field name="model">llibreria.llibre</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nom"/>
          <field name="preu"/>
          <field name="exemplars"/>
          <field name="rotura_estoc"/>
          <field name="data"/>
          <field name="segonama"/>
          <field name="estat"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="llibreria.action_window">
      <field name="name">llibreria window</field>
      <field name="res_model">llibreria.llibre</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
