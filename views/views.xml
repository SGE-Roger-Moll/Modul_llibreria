    <!-- Top menu item -->
    <menuitem name="llibreria" id="llibreria.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="llibreria.menu_1" parent="llibreria.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="llibreria.menu_1_list" parent="llibreria.menu_1"
              action="llibreria.action_window"/>
  </data>
</odoo>